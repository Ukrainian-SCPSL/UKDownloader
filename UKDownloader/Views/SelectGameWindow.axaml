<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UKDownloader.SelectGameWindow"
        Width="450"
        Height="600"
        MinWidth="450"
        MinHeight="600"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None">

	<!-- Внешний border с рамкой -->
	<Border BorderBrush="#474747"
			BorderThickness="4"
			CornerRadius="11.4"
			Background="#1E1E1E">
		<!-- ← даёт пространство под рамку -->
		
		<Border Background="#1E1E1E"
				CornerRadius="9">

			<Grid RowDefinitions="Auto,*">

				<!-- Верхняя часть -->
				<Grid>
					<!-- Слой для перемещения окна -->
					<Rectangle Height="40"
                               Fill="Transparent"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               PointerPressed="OnTitleBarPressed"/>

					<!-- Кнопка закрытия -->
					<StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,12,16,0"
                                Spacing="12">
						<Border Width="30" Height="30"
                                Background="Transparent"
                                Cursor="Hand"
                                PointerPressed="Close_Click">
							<Image Source="avares://UKDownloader/Assets/close.png"
                                   Width="28" Height="27"/>
						</Border>
					</StackPanel>

					<!-- Заголовок -->
					<TextBlock Text="Доступні ігри"
                               FontFamily="avares://UKDownloader/Assets/#Montserrat"
                               FontWeight="Bold"
                               FontSize="39.5"
                               Foreground="#F2F2F2"
                               Margin="16,16,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"/>
				</Grid>

				<!-- Контент + кнопка -->
				<Grid Grid.Row="1" RowDefinitions="*,Auto" Margin="10">
					<ScrollViewer VerticalScrollBarVisibility="Visible">
						<StackPanel x:Name="GamesPanel" Spacing="10"/>
					</ScrollViewer>

					<Border Width="188"
                            Height="31"
                            CornerRadius="8.55"
                            Background="White"
                            Cursor="Hand"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Grid.Row="1"
                            PointerPressed="SelectButton_Click">
						<TextBlock Text="Обрати"
                                   FontFamily="avares://UKDownloader/Assets/#Montserrat"
                                   FontWeight="SemiBold"
                                   FontSize="20"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"/>
					</Border>
				</Grid>
			</Grid>
		</Border>
	</Border>
</Window>